!!! 5
%html(lang="en")
	%head
		= Haml::Engine.new(File.read("_meta.haml")).render
		%link(crossorigin="anonymous" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" rel="stylesheet")
		%link(href="main.css" rel="stylesheet")
		%title onokatio
	%body
		= Haml::Engine.new(File.read("_navbar.haml")).render
		%picture.rounded.mx-auto.d-block.m-5(style="max-width: 225px;width: 34vw;")
			%source(type="image/webp" srcset="https://raw.githubusercontent.com/onokatio/onokatio.github.io/master/katio.webp")
			%img(src="katio.jpg" alt="katio cat")
		%table.table.table-striped(style="max-width: 655px;margin: auto;")
			%tbody
				- status = Array.new
				- status << ["Name","onokatio"]
				- status << ["Age","0x10"]
				- status << ["Gender","Male"]
				- status << ["Place","Tokyo Japan"]
				- status << ["Favorite color","Sky blue"]
				- status.each do |num|
					%tr
						%td #{num[0]}
						%td #{num[1]}
		%script(async defer src="https://code.jquery.com/jquery-3.1.1.slim.min.js" crossorigin="anonymous" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n")
		%script(async defer src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" crossorigin="anonymous" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb")
		%script(async defer src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" crossorigin="anonymous" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn")




